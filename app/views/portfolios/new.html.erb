<h1> Create a new portfolio item </h1>

<%= form_for(@portfolio) do |f| %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :subtitle %>
    <%= f.text_field :subtitle %>
  </div>
  <div class="field">
    <%= f.label :body %>
    <%= f.text_field :body %>
  </div>

  <ul>
    <%= f.fields_for(:technologies) do |t| %>
      <li> 
        <%= t.label :name %>
        <%= t.text_field :name %>
      </li>
    <% end %>
  </ul>
  <div class="submit">
    <%= f.submit %>
  </div>
<% end %>
